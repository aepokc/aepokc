<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <b><%= f.label :title %></b><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <b><%= f.label :parent %></b><br />
    <%= f.collection_select :parent_id, Page.find_parents, :id, :link, :include_blank => true %>
  </div>  
  <div class="field">
    <b><%= f.label :position %></b><br />
    <%= f.text_field :position, :size => '3' %>
  </div>
  <div class="field">
    <b><%= f.label :link %></b><br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <b><%= f.label :content %></b> - some html permitted<br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
