<b>
  Members List
</b>
<div class="hr">
</div>
<table>
  <tr>
  	<th>Confirmed? |</th>
  	<th>Leader? |</th>
    <th>Name</th>
    <th>Email</th>
  </tr>
<% @members.each do |member| %>
  <tr>
  	<td><%= member.confirmed? ? image_tag('/images/check.gif') : '' %></td>
   	<td><%= member.leader? ? image_tag('/images/check.gif') : '' %></td>
    <td>
    	<% unless member.profile.nil? %>
    		<%= link_to member.lastname + ', ' + member.firstname, '/members/profiles/' + member.profile.id.to_s %>
    	<% end %>
    </td>
    <td><%= link_to member.email, 'mailto:' + member.email %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Member', new_member_registration_path %>
