<b>
  Members List
</b>
<div class="hr">
</div>
<table>
  <tr>
  	<th>Confirmed? |</th>
  	<th>Leader? |</th>
    <th>Name</th>
    <th>Email</th>
		<th></th>
  </tr>
<% @members.each do |member| %>
  <tr>
  	<td><%= member.confirmed? ? image_tag('/images/check.gif') : '' %></td>
   	<td><%= member.leader? ? image_tag('/images/check.gif') : '' %></td>
    <td><%= link_to member.lastname + ', ' + member.firstname, '/members/' + member.id.to_s %></td>
    <td><%= link_to member.email, 'mailto:' + member.email %></td>
    <td><%= link_to 'Delete', member, :confirm => 'This will PERMANENTLY DESTROY this member record along with all of his or her profile data. Are you ABSOLUTELY CERTAIN that this is what you want to do?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Member', new_member_registration_path %>
