<%= form_for([:resources, @event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field :member_id, :value => current_member.id %>
  </div>
  <% if current_member.leader? %>
		<div class="field">
			<%= f.check_box :sanctioned %> aep Sanctioned?
		</div>
	<% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.text_field :time %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :details %>&nbsp;&nbsp;(<span class="ghost">links can be created using "http://..."</span>)<br />
    <%= f.text_area :details %>
  </div>
  <div class="field">
    <%= f.label 'Facebook Event ID' %><br />
    <%= f.text_field :feid %>&nbsp;&nbsp;(<span class="ghost">http://www.facebook.com/event.php?eid=</span><span class="example"><b>157345660962108</b></span>)
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
